<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_activated="false"
        android:drawable="@color/dark_red"/>

    <item
        android:state_pressed="true">

        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">

                    <stroke
                        android:width="5dp"
                        android:color="@color/white"/>
                </shape>
            </item>

            <item
                android:left="5dp">

                <shape
                    android:shape="rectangle">

                    <stroke
                        android:width="5dp"
                        android:color="@color/dark_red"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item
        android:state_activated="true">

        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">

                    <stroke
                        android:width="5dp"
                        android:color="@color/white"/>
                </shape>
            </item>

            <item
                android:left="5dp">

                <shape
                    android:shape="rectangle">

                    <stroke
                        android:width="5dp"
                        android:color="@color/dark_red"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>