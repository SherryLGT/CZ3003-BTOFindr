<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_selected="false"
        android:drawable="@color/gray"/>

    <item
        android:state_selected="true">

        <layer-list>
            <item>
                <shape
                    android:shape="rectangle" >
                    <solid
                        android:color="@color/gray"/>
                </shape>
            </item>

            <item
                android:top="-5dp"
                android:right="-5dp"
                android:left="-5dp">
                <shape>
                    <stroke
                        android:width="5dp"
                        android:color="@color/red"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item
        android:state_pressed="true">

        <layer-list>
            <item>
                <shape
                    android:shape="rectangle" >
                    <solid
                        android:color="@color/gray"/>
                </shape>
            </item>

            <item
                android:top="-5dp"
                android:right="-5dp"
                android:left="-5dp">
                <shape>
                    <stroke
                        android:width="5dp"
                        android:color="@color/red"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>